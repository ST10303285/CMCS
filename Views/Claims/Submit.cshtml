@model CMCS.Models.Claim

<h2>Submit New Claim</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="LecturerName">Lecturer Name</label>
        @Html.TextBoxFor(m => m.LecturerName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="HoursWorked">Hours Worked</label>
        @Html.TextBoxFor(m => m.HoursWorked, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="HourlyRate">Hourly Rate</label>
        @Html.TextBoxFor(m => m.HourlyRate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="ClaimAmount">Claim Amount</label>
        @Html.TextBoxFor(m => m.ClaimAmount, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <input type="submit" value="Submit Claim" class="btn btn-primary" />
}

